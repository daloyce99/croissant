{
  "name": "croissant",
  "version": "1.0.0",
  "description": "A minimal Tauri app for Croissant.",
  "author": "Pablo Veiga <pveiga21@protonmail.com>",
  "scripts": {
    "start": "react-scripts start",
    "dev": "react-scripts start",
    "server": "node server.js",
    "dev:full": "concurrently \"npm run server\" \"npm run start\"",
