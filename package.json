    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-countdown": "^2.3.6",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.7.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.7",
    "@types/react-router-dom": "^5.3.3",
